@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/styles/custom-Register.css" rel="stylesheet" />
    <link href="~/Content/styles/plugins-Register.css" rel="stylesheet" />
    <link href="~/Content/styles/style-Register.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/styles/responsive.css">


    <style>
        body {
            background-image: url('../Content/images/91.jpg');
            background-color: #FF6600;
            width: 100%;
            height: auto;
        }

        .backgroundImage {
            height: auto;
            width: 100%;
            background: rgba(0,0,0,.6)
        }

        .resetBorder:focus {
            outline: none !important;
        }
    </style>

</head>
<body>
    <div class="backgroundImage">
        @model WebApplication2.ViewModel.Register

        @using (Html.BeginForm())

        {
            @Html.AntiForgeryToken()
            <section class="account">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="account-contents">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12" style="margin-top:0%">
                                        <div class="account-thumb">
                                            <h2>Register now</h2>
                                            <p style="color:white;line-height:3;margin-top:2%;font-weight:bold">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis consectetur similique deleniti pariatur enim cumque eum<br />Quis consectetur similique deleniti pariatur enim cumque eum</p>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="account-content">
                                            <form action="#">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="single-acc-field">
                                                    <label for="name">Name</label>
                                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="single-acc-field">
                                                    <label for="email">Email</label>
                                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="single-acc-field">
                                                    <label for="password">Password</label>
                                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="single-acc-field">
                                                    <label for="password">Confirm Password</label>
                                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                </div>
                                                
                                                <div class="single-acc-field">
                                                    <label for="name">Country</label>
                                                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="single-acc-field">
                                                    <label for="name">City</label>
                                                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="single-acc-field">
                                                    <label for="name">Street</label>
                                                    @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Street, "", new { @class = "text-danger" })
                                                </div>



                                                <div class="single-acc-field boxes">
                                                    <input type="checkbox" id="checkbox">
                                                    <label for="checkbox">I'm not a robot</label>
                                                </div>
                                                <div class="single-acc-field">
                                                    <button type="submit">Register now</button>
                                                </div>
                                                <a href="login">Already account? Login</a>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins-Register.js"></script>
    <script src="~/Content/js/main-Register.js"></script>

</body>
</html>

