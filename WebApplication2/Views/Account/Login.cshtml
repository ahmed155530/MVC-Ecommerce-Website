@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/styles/custom-Register.css" rel="stylesheet" />
    <link href="~/Content/styles/plugins-Register.css" rel="stylesheet" />
    <link href="~/Content/styles/style-Register.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/styles/responsive.css">


    <style>
        .backgroundImage {
            background-image: url('../Content/images/91.jpg');
            background-size:cover;
             background-repeat: no-repeat;            
            background-position: center center;
            background-color: #FF6600;
            width: 100%;
            height: 100%;          
           
        }

        .cover {
            min-height: 100%;
            width: 100%;
            background: rgba(0,0,0,.6)
        }

        .resetBorder:focus {
            outline: none !important;
        }
    </style>

</head>
<body>
    <div class="backgroundImage">
        <div class="cover">
            @model WebApplication2.ViewModel.LoginUser


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <section class="account" style="padding-top:10%">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <div class="account-contents" style="background: url('assets/img/about/about1.jpg'); background-size: cover;">
                                    <div class="row">
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                            <div class="account-thumb">
                                                <h2>Login now</h2>
                                                <p style="color:white">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis consectetur similique deleniti pariatur enim cumque eum</p>
                                            </div>
                                        </div>

                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                            <div class="account-content">
                                                <form action="#">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="single-acc-field">
                                                        <label for="User Name">User Name</label>
                                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", style = "border-radius:30px;" } })
                                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="single-acc-field">
                                                        <label for="password">Password</label>
                                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "border-radius:30px;" } })
                                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="single-acc-field boxes">
                                                        <input type="checkbox" id="checkbox">
                                                        <label for="checkbox">Remember me</label>
                                                    </div>
                                                    <div class="single-acc-field">
                                                        <button type="submit" style="border-radius:50px">Login Account</button>
                                                    </div>
                                                    <a href="">Forget Password?</a>
                                                    

                                                    <a href="RegisterUser">Not Account Yet?</a>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins-Register.js"></script>
    <script src="~/Content/js/main-Register.js"></script>

</body>
</html>


